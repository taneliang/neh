{
  "private": true,
  "name": "neh",
  "version": "1.0.0",
  "description": "A tool that redirects you; intended to be an Alfred for your browser.",
  "scripts": {
    "start": "wrangler preview --watch",
    "publish": "wrangler publish",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "yarn lint:code && yarn lint:misc",
    "lint:fix": "yarn lint:code:fix && yarn lint:misc:fix",
    "lint:code": "eslint --ext .ts,.js .",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:misc": "prettier --check **/*.{json,md,pug} --ignore-path '{node_modules,worker,dist}'",
    "lint:misc:fix": "yarn lint:misc --write",
    "ci": "yarn typecheck && yarn lint"
  },
  "author": "E-Liang Tan <eliang@eliangtan.com>",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/wrangler": "^1.6.0",
    "@prettier/plugin-pug": "^1.1.0",
    "@types/fuzzyset.js": "^0.0.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "@types/pug": "^2.0.4",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "@udacity/types-service-worker-mock": "^1.1.0",
    "awesome-pug-jest": "^1.1.0",
    "cloudflare-worker-mock": "^1.1.0",
    "codecov": "^3.6.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "fuzzyset.js": "^0.0.8",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "jest-raw-loader": "^1.0.1",
    "prettier": "^1.19.1",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "raw-loader": "^4.0.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "types-cloudflare-worker": "^1.1.0",
    "typescript": "^3.7.3",
    "url-parse": "^1.4.7",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
