{
  "private": true,
  "name": "neh",
  "version": "1.0.0",
  "description": "A tool that redirects you; intended to be an Alfred for your browser.",
  "scripts": {
    "start": "wrangler preview --watch",
    "publish": "wrangler publish",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "yarn lint:code && yarn lint:misc",
    "lint:fix": "yarn lint:code:fix && yarn lint:misc:fix",
    "lint:code": "eslint --ext .ts,.js .",
    "lint:code:fix": "yarn lint:code --fix",
    "lint:misc": "prettier --check **/*.{json,md,pug} --ignore-path '{node_modules,worker,dist}'",
    "lint:misc:fix": "yarn lint:misc --write",
    "ci": "yarn typecheck && yarn lint"
  },
  "author": "E-Liang Tan <eliang@eliangtan.com>",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/wrangler": "^1.8.0",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@prettier/plugin-pug": "^1.1.9",
    "@types/fuzzyset.js": "^0.0.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.6",
    "@types/pug": "^2.0.4",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "@udacity/types-service-worker-mock": "^1.1.2",
    "awesome-pug-jest": "^1.1.0",
    "cloudflare-worker-mock": "^1.1.2",
    "codecov": "^3.6.5",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fuzzyset.js": "^0.0.91",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "jest-raw-loader": "^1.0.1",
    "jest-transform-stub": "^2.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "raw-loader": "^4.0.0",
    "source-map-loader": "^0.2.4",
    "tailwindcss": "^1.2.0",
    "to-string-loader": "^1.1.6",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "types-cloudflare-worker": "^1.1.2",
    "typescript": "^3.7.5",
    "url-parse": "^1.4.7",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
