{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": ["esnext", "webworker", "es2015.promise"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["./src/typings.d.ts", "./src/*.ts", "./src/**/*.ts"],
  "exclude": ["node_modules/", "dist/"]
}
